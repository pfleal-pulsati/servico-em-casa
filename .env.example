# ==============================================
# CONFIGURAÇÕES DE PRODUÇÃO - DIGITALOCEAN
# ==============================================

# Django Settings
DEBUG=0
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Database Configuration
DB_NAME=service_platform
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# Alternative: Use DATABASE_URL instead of individual DB settings
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security Settings
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-app.ondigitalocean.app

# CORS Settings (Frontend URLs that can access the API)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://your-app.ondigitalocean.app

# Email Configuration (Optional - for password reset, notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# WhatsApp Integration (if needed)
WHATSAPP_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# File Storage (for production with cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Sentry (Error Monitoring - Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================
# INSTRUÇÕES DE USO:
# ==============================================
# 1. Copie este arquivo para .env
# 2. Substitua todos os valores de exemplo pelos valores reais
# 3. NUNCA commite o arquivo .env no git
# 4. Para DigitalOcean App Platform, configure essas variáveis
#    na seção "Environment Variables" do seu app
# ==============================================